<div class="row my-3">
    <div class="project-image col-lg-8 {{#if reversed}}order-lg-last{{/if}}">
        <img src="{{screenshot}}" alt="Screenshot of {{name}}" class="img-responsive">
    </div>
    <div class="project-desc col-lg-4">
        <h2>{{name}}</h2>
        <p>{{description}}</p>
        <a href="{{deployedURL}}"><button class="btn btn-slate btn-lg">Try It!</button></a>
        <a href="{{githubURL}}"><button class="btn btn-slate btn-lg"><i class="fab fa-github"></i></button></a>
    </div>
</div>
